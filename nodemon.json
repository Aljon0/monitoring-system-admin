{
  "watch": ["*.*", ".env"],
  "ext": "*",
  "verbose": true,
  "ignore": [
    ".git",
    ".gitignore",
    "dist",
    "node_modules/**/node_modules",
    "package-lock.json",
    ".vscode",
    "docker-compose.yml",
    "Dockerfile",
    "entrypoint.sh",
    "README.md"
  ],
  "events": {
    "restart": "npm install --legacy-peer-deps && tsc -b && vite build"
  }
}
